linode-token = "<API-token>"

instance-label = "<instance-name>"
instance-type = "<linode-size>"
instance-tags = ["<tags>"]

ssh-pub-keys = ["<ssh-pub-key1>", "<ssh-pub-key2>"]
root-password = "<root-password>"

root-disk-size = <disk-size-in-megabytes>
persistent-volume-id = <volume-id>

domain-name = "<domain>"
domain-soa-email = "<user>@<domain>"
domain-records = {"root": "<domain>", "w3": "www" }
domain-records-ttl = <number-of-seconds>